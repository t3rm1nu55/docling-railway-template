:8080 {
    @v1 {
        path /v1/*
    }
    @auth {
        header Authorization "Bearer {$CADDY_AUTHORIZATION}"
        path /v1/*
    }
    route @auth {
        reverse_proxy {
            dynamic a docling 5001 {
                refresh 5s
            }
        }
    }
    route @v1 {
        respond "Unauthorized" 401
    }
    route {
        reverse_proxy {
            dynamic a docling 5001 {
                refresh 5s
            }
        }
    }
}
